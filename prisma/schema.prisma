generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model MenuCategory {
  id        String     @id @default(cuid())
  name      String
  menuItems MenuItem[]
}

model MenuItem {
  id             String       @id @default(cuid())
  name           String
  description    String
  price          Float
  menuCategory   MenuCategory @relation(fields: [menuCategoryId], references: [id])
  menuCategoryId String
}

model GeneratedMenu {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  filePath  String
}
